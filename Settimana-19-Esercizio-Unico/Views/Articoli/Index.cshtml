@model IEnumerable<Settimana_19_Esercizio_Unico.Models.Articoli>

@{
    ViewBag.Title = "Index";
}

<h3 class="fs-2 fw-lighter">Lista Prodotti</h3>

<p>
    @Html.ActionLink("Crea Nuovo", "Create", "Articoli", new { area = "" }, new {@class = "btn btn-outline-primary"})
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Foto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Prezzo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TempoConsegna)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ingredienti)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td style="width: 10%">
            <img class="img-fluid" alt="immagine_prodotto" src="~/ImmaginiProdotti/@item.Foto"/>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Prezzo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TempoConsegna)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ingredienti)
        </td>
        <td>
            @Html.ActionLink("Modifica", "Edit", "Articoli", new { id = item.IdArticolo }, new { @class = "btn btn-warning" })
            @Html.ActionLink("Dettagli", "Details", "Articoli", new { id = item.IdArticolo }, new { @class = "btn btn-primary" })
            @Html.ActionLink("Elimina", "Delete", "Articoli", new { id = item.IdArticolo }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
