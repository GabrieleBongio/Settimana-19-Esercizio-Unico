@model IEnumerable<Settimana_19_Esercizio_Unico.Models.Utenti>

@{
    ViewBag.Title = "Index";
}

<h3 class="fs-2 fw-lighter">Lista Utenti</h3>

<p>
    @Html.ActionLink("Crea Nuovo", "Create", "Utenti", new { area = "" }, new { @class = "btn btn-outline-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Username)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Password)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Admin)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Username)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Admin)
            </td>
            <td>
                @Html.ActionLink("Modifica", "Edit", "Utenti", new { id = item.IdUtente }, new { @class = "btn btn-warning" })
                @Html.ActionLink("Dettagli", "Details", "Utenti", new { id = item.IdUtente }, new { @class = "btn btn-primary" })
                @Html.ActionLink("Elimina", "Delete", "Utenti", new { id = item.IdUtente}, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>
